<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.he.studenmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.he.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.he.activity.admin_login_activity"></activity>
        <activity android:name="com.example.he.activity.student_login_activity"></activity>
        <activity
            android:name="com.example.he.activity.admin_activity"
            android:launchMode="singleTask"></activity>
        <activity android:name="com.example.he.activity.studentInfo_activity"></activity>
        <activity android:name="com.example.he.activity.addStudent_info_activity"></activity>
        <activity android:name="com.example.he.activity.student_total_score"></activity>
        <activity android:name="com.example.he.activity.student_activity"></activity>

        <receiver android:name="com.example.he.tools.MyBroadcastBestPractice">
            <intent-filter>
                <action android:name="com.he.example.OfflineBradcast" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
